<?xml version="1.0"?>
<!-- acl.xml -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Tapbuy_RedirectTracking::config" title="Tapbuy Redirect and Tracking Settings" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::marketing">
                    <resource id="Tapbuy_RedirectTracking::marketing" title="Tapbuy" sortOrder="55">
                        <resource id="Tapbuy_RedirectTracking::abtest" title="A/B Testing" sortOrder="10" />
                        <resource id="Tapbuy_RedirectTracking::reports" title="Reports" sortOrder="20" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>