<?xml version="1.0"?>
<!-- di.xml -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Preferences -->
    <preference for="Tapbuy\RedirectTracking\Api\TapbuyServiceInterface"
                type="Tapbuy\RedirectTracking\Model\Service"/>

    <preference for="Tapbuy\RedirectTracking\Api\TapbuyRequestDetectorInterface"
                type="Tapbuy\RedirectTracking\Model\TapbuyRequestDetector"/>

    <preference for="Tapbuy\RedirectTracking\Api\ConfigInterface"
                type="Tapbuy\RedirectTracking\Model\Config"/>

    <preference for="Tapbuy\RedirectTracking\Api\CookieInterface"
                type="Tapbuy\RedirectTracking\Model\Cookie"/>

    <preference for="Tapbuy\RedirectTracking\Api\DataHelperInterface"
                type="Tapbuy\RedirectTracking\Helper\Data"/>

    <preference for="Tapbuy\RedirectTracking\Api\ABTestInterface"
                type="Tapbuy\RedirectTracking\Model\ABTest"/>

    <preference for="Tapbuy\RedirectTracking\Api\LoggerInterface"
                type="Tapbuy\RedirectTracking\Logger\TapbuyLogger"/>

    <preference for="Tapbuy\RedirectTracking\Api\LogHandlerInterface"
                type="Tapbuy\RedirectTracking\Logger\Handler"/>

    <preference for="Tapbuy\RedirectTracking\Api\Authorization\TokenAuthorizationInterface"
                type="Tapbuy\RedirectTracking\Model\Authorization\TokenAuthorization"/>

    <!-- Tapbuy Centralized Logger Configuration -->
    <virtualType name="Tapbuy\RedirectTracking\Logger\VirtualLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">tapbuy</argument>
            <argument name="handlers" xsi:type="array">
                <item name="tapbuy_handler" xsi:type="object">Tapbuy\RedirectTracking\Logger\Handler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Make TapbuyLogger use the virtual logger configuration -->
    <type name="Tapbuy\RedirectTracking\Logger\TapbuyLogger">
        <arguments>
            <argument name="name" xsi:type="string">tapbuy</argument>
            <argument name="handlers" xsi:type="array">
                <item name="tapbuy_handler" xsi:type="object">Tapbuy\RedirectTracking\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

    <!-- Token Authorization -->
    <type name="Tapbuy\RedirectTracking\Model\Authorization\TokenAuthorization">
        <arguments>
            <argument name="requestInterface" xsi:type="object">Magento\Framework\App\RequestInterface</argument>
            <argument name="tokenModelFactory" xsi:type="object">Magento\Integration\Model\Oauth\TokenFactory</argument>
            <argument name="integrationService" xsi:type="object">Magento\Integration\Model\IntegrationService</argument>
        </arguments>
    </type>

    <!-- Inject centralized Tapbuy Logger where needed -->
    <type name="Tapbuy\RedirectTracking\Model\Service">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <type name="Tapbuy\RedirectTracking\Helper\Data">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <type name="Tapbuy\RedirectTracking\Model\ABTest">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <type name="Tapbuy\RedirectTracking\Observer\OrderSaveAfter">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <type name="Tapbuy\RedirectTracking\Controller\Pixel\Track">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>
</config>