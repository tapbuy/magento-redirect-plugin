<?xml version="1.0"?>
<!-- di.xml -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Preferences -->
    <preference for="Tapbuy\RedirectTracking\Api\TapbuyServiceInterface"
                type="Tapbuy\RedirectTracking\Model\Service"/>

    <preference for="Tapbuy\RedirectTracking\Api\TapbuyRequestDetectorInterface"
                type="Tapbuy\RedirectTracking\Model\TapbuyRequestDetector"/>

    <preference for="Tapbuy\RedirectTracking\Api\ConfigInterface"
                type="Tapbuy\RedirectTracking\Model\Config"/>

    <preference for="Tapbuy\RedirectTracking\Api\CookieInterface"
                type="Tapbuy\RedirectTracking\Model\Cookie"/>

    <preference for="Tapbuy\RedirectTracking\Api\DataHelperInterface"
                type="Tapbuy\RedirectTracking\Helper\Data"/>

    <preference for="Tapbuy\RedirectTracking\Api\ABTestInterface"
                type="Tapbuy\RedirectTracking\Model\ABTest"/>

    <preference for="Tapbuy\RedirectTracking\Api\LoggerInterface"
                type="Tapbuy\RedirectTracking\Logger\TapbuyLogger"/>

    <preference for="Tapbuy\RedirectTracking\Api\LogHandlerInterface"
                type="Tapbuy\RedirectTracking\Logger\Handler"/>

    <preference for="Tapbuy\RedirectTracking\Api\Authorization\TokenAuthorizationInterface"
                type="Tapbuy\RedirectTracking\Model\Authorization\TokenAuthorization"/>

    <!-- Tapbuy Centralized Logger Configuration -->
    <type name="Tapbuy\RedirectTracking\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <type name="Tapbuy\RedirectTracking\Logger\TraceIdProcessor">
        <arguments>
            <argument name="tapbuyRequestDetector" xsi:type="object">Tapbuy\RedirectTracking\Api\TapbuyRequestDetectorInterface</argument>
        </arguments>
    </type>

    <virtualType name="Tapbuy\RedirectTracking\Logger\VirtualLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">tapbuy</argument>
            <argument name="handlers" xsi:type="array">
                <item name="tapbuy_handler" xsi:type="object">Tapbuy\RedirectTracking\Logger\Handler</item>
            </argument>
            <argument name="processors" xsi:type="array">
                <item name="trace_id" xsi:type="object">Tapbuy\RedirectTracking\Logger\TraceIdProcessor</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Make TapbuyLogger use the virtual logger configuration -->
    <type name="Tapbuy\RedirectTracking\Logger\TapbuyLogger">
        <arguments>
            <argument name="name" xsi:type="string">tapbuy</argument>
            <argument name="handlers" xsi:type="array">
                <item name="tapbuy_handler" xsi:type="object">Tapbuy\RedirectTracking\Logger\Handler</item>
            </argument>
            <argument name="processors" xsi:type="array">
                <item name="trace_id" xsi:type="object">Tapbuy\RedirectTracking\Logger\TraceIdProcessor</item>
            </argument>
        </arguments>
    </type>

    <!-- Token Authorization -->
    <type name="Tapbuy\RedirectTracking\Model\Authorization\TokenAuthorization">
        <arguments>
            <argument name="requestInterface" xsi:type="object">Magento\Framework\App\RequestInterface</argument>
            <argument name="tokenModelFactory" xsi:type="object">Magento\Integration\Model\Oauth\TokenFactory</argument>
            <argument name="integrationService" xsi:type="object">Magento\Integration\Model\IntegrationService</argument>
        </arguments>
    </type>

    <!-- Inject centralized Tapbuy Logger where needed -->
    <type name="Tapbuy\RedirectTracking\Model\Service">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <!-- Cookie Service -->
    <type name="Tapbuy\RedirectTracking\Service\CookieService">
        <arguments>
            <argument name="cookieManager" xsi:type="object">Magento\Framework\Stdlib\CookieManagerInterface</argument>
            <argument name="cookie" xsi:type="object">Tapbuy\RedirectTracking\Api\CookieInterface</argument>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <!-- Encryption Service -->
    <type name="Tapbuy\RedirectTracking\Service\EncryptionService">
        <arguments>
            <argument name="config" xsi:type="object">Tapbuy\RedirectTracking\Api\ConfigInterface</argument>
            <argument name="request" xsi:type="object">Magento\Framework\App\RequestInterface</argument>
            <argument name="json" xsi:type="object">Magento\Framework\Serialize\Serializer\Json</argument>
            <argument name="quoteIdMaskFactory" xsi:type="object">Magento\Quote\Model\QuoteIdMaskFactory</argument>
        </arguments>
    </type>

    <!-- Locale Service -->
    <type name="Tapbuy\RedirectTracking\Service\LocaleService">
        <arguments>
            <argument name="localeResolver" xsi:type="object">Magento\Framework\Locale\Resolver</argument>
            <argument name="config" xsi:type="object">Tapbuy\RedirectTracking\Api\ConfigInterface</argument>
        </arguments>
    </type>

    <!-- Pixel Service -->
    <type name="Tapbuy\RedirectTracking\Service\PixelService">
        <arguments>
            <argument name="storeManager" xsi:type="object">Magento\Store\Model\StoreManagerInterface</argument>
        </arguments>
    </type>

    <!-- Data Helper with Service Dependencies -->
    <type name="Tapbuy\RedirectTracking\Helper\Data">
        <arguments>
            <argument name="cookieService" xsi:type="object">Tapbuy\RedirectTracking\Service\CookieService</argument>
            <argument name="encryptionService" xsi:type="object">Tapbuy\RedirectTracking\Service\EncryptionService</argument>
            <argument name="localeService" xsi:type="object">Tapbuy\RedirectTracking\Service\LocaleService</argument>
            <argument name="pixelService" xsi:type="object">Tapbuy\RedirectTracking\Service\PixelService</argument>
            <argument name="httpHeader" xsi:type="object">Magento\Framework\HTTP\Header</argument>
            <argument name="request" xsi:type="object">Magento\Framework\App\RequestInterface</argument>
        </arguments>
    </type>

    <type name="Tapbuy\RedirectTracking\Model\ABTest">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <type name="Tapbuy\RedirectTracking\Observer\OrderSaveAfter">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <type name="Tapbuy\RedirectTracking\Controller\Pixel\Track">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <!-- GraphQL Exception Logger Plugin -->
    <type name="Tapbuy\RedirectTracking\Plugin\GraphQlExceptionLogger">
        <arguments>
            <argument name="tapbuyRequestDetector" xsi:type="object">Tapbuy\RedirectTracking\Api\TapbuyRequestDetectorInterface</argument>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Logger\TapbuyLogger</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\GraphQl\Query\ErrorHandlerInterface">
        <plugin name="tapbuy_graphql_exception_logger"
                type="Tapbuy\RedirectTracking\Plugin\GraphQlExceptionLogger"
                sortOrder="10"/>
    </type>
</config>